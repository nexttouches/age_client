<!--- The default skin class for the Spark Button component.

	   @see spark.components.Button

	  @langversion 3.0
	  @playerversion Flash 10
	  @playerversion AIR 1.5
	  @productversion Flex 4
-->
<s:SparkButtonSkin width="22" height="22"
	minHeight="21"
	minWidth="21"
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	alpha.disabled="0.5">

	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

	<fx:Script fb:purpose="styling">
		<![CDATA[
			/* Define the skin elements that should not be colorized.
			For button, the graphics are colorized but the label is not. */
			static private const exclusions:Array = [ "labelDisplay" ];

			/**
			 * @private
			 */
			override public function get colorizeExclusions():Array
			{
				return exclusions;
			}

			/**
			 * @private
			 */
			override protected function initializationComplete():void
			{
				useChromeColor = true;
				super.initializationComplete();
			}
		]]>
	</fx:Script>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>

	<s:Rect id="lightRect"
		left="0" right="0" top="0" bottom="0">
		<s:stroke>
			<s:SolidColorStroke 
				color="#ffffff"
				caps="none"
				joints="miter"
				miterLimit="4"
				weight="1"
				alpha="0.1"
				alpha.down="0.15"
				alpha.disabled="0.05"/>
		</s:stroke>
	</s:Rect>

	<s:Rect id="innerRect"
		left="1" right="1" top="1" bottom="1">
		<s:stroke>
			<s:SolidColorStroke 
				color="#000000"
				weight="1"
				caps="none"
				miterLimit="4"
				joints="miter"
				alpha="0.6"/>
		</s:stroke>
	</s:Rect>


	<s:Rect id="innerLightRect"
		left="2" right="2" top="2" bottom="2">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry 
					color="#ffffff"
					color.disabled="#000000"
					color.down="#ffffff"
					color.over="#ffffff"
					alpha="0.1"
					alpha.over="0.15"
					alpha.down="0.05"
					alpha.disabled="0.3"
					ratio="0"/>
				<s:GradientEntry 
					color="#ffffff"
					color.disabled="#000000"
					color.down="#ffffff"
					color.over="#ffffff"
					alpha="0.0"
					alpha.over="0.05"
					alpha.down="0.0"
					alpha.disabled="0.3"
					ratio="1"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>

	<s:Rect id="innerLightStroke"
		left="2" right="2" top="2" bottom="2">
		<s:stroke>
			<s:LinearGradientStroke weight="1"
				caps="none"
				miterLimit="4"
				joints="miter"
				rotation="90">
				<s:GradientEntry 
					color="#ffffff"
					color.disabled="#ffffff"
					color.down="#000000"
					alpha="0.08"
					ratio="0"
					alpha.down="0.2"
					alpha.disabled="0.05"/>
				<s:GradientEntry 
					color="#ffffff"
					color.disabled="#ffffff"
					color.down="#000000"
					alpha="0.03"
					ratio="1"
					ratio.down="1"
					alpha.down="0.1"
					alpha.disabled="0.05"/>
			</s:LinearGradientStroke>
		</s:stroke>
	</s:Rect>

	<!-- background -->
	<!-- shadow (down state only) -->
	<!-- label -->

	<s:Label id="labelDisplay"
		left="6" right="6" top="5" bottom="5"
		horizontalCenter="0"
		textAlign="center"
		verticalAlign="middle"
		verticalCenter="1"
		text="(Label)">
	</s:Label>

	<s:BitmapImage
		left="3" top="3"
		source="@Embed('../assets/icons/undo.png')"/>

</s:SparkButtonSkin>
